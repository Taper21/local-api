{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Badge",
  "description": "Representation of badge",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string",
      "description": "User id",
      "required": true
    },
    "type": {
      "type": "string",
      "enum": [
        "oneTime",
        "progressive"
      ],
      "description": "Type of badge",
      "default": "oneTime",
      "required": true
    },
    "level": {
      "description": "Level of badge",
      "required": true,
      "type": "number"
    },
    "name": {
      "type": "object",
      "title": "Badge name",
      "uniqueItems": true,
      "description": "Name of badge",
      "required": true,
      "additionalProperties": true
    },
    "description": {
      "type": "object",
      "title": "Badge description",
      "required": true,
      "uniqueItems": true,
      "additionalProperties": true
    },
    "picture-50x50": {
          "description": "Small size of badge picture",
          "type": "string",
          "default": "http://placehold.it/50x50",
          "required": true
    },
    "picture-75x75": {
          "description": "Normal size of badge picture",
          "type": "string",
          "default": "http://placehold.it/75x75",
          "required": true
    },
    "category": {
      "title": "Badge category",
      "required": true,
      "default": "categoryName",
      "type": "string"
    },
    "tags": {
      "title": "List of badge tags",
      "type": "array",
      "uniqueItems": true,
      "required": false,
      "items": {
        "minLength": 2,
        "maxLength": 32,
        "type": "string"
      }
    },
    "createAt": {
      "format": "date-time",
      "type": "string",
      "description": "Badge creation time",
      "required": true,
      "default": "2012-04-23T18:25:43.511Z"
    },
    "points": {
      "type": "number",
      "description": "User points",
      "minimum": "0",
      "required": true
    },
    "facebook": {
                "type": "object",
                "title": "Facebook",
                "description": " For more information see https://developers.facebook.com/docs/graph-api/reference/v2.1/user/feed",
                "id": "http://jsonschema.net/notifications/0/share/facebook",
                "required": true,
                "properties": {
                  "description": {
                    "type": "object",
                    "description": "Description of share item",
                    "required": true,
                    "additionalProperties": true
                  },
                  "title": {
                    "type": "object",
                    "description": "Title of share item",
                    "required": true,
                    "additionalProperties": true
                  }
                }
              },
              "twitter": {
                "type": "object",
                "title": "Twitter",
                "description": " For more information see https://dev.twitter.com/rest/reference/post/statuses/update",
                "required": false,
                "properties": {
                  "status": {
                    "type": "object",
                    "description": "The text of your status update, typically up to 140 characters. URL encode as necessary. t.co link wrapping may affect character counts.",
                    "required": true,
                    "additionalProperties": true
                  }
                }
              }
  }
}