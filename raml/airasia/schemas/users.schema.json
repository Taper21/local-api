{
  "title": "User",
  "description": "Representation of user",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "format": "email",
      "description": "User email address",
      "required": true
    },
    "firstName": {
      "type": "string",
      "description": "User first name",
      "minLength": 4,
      "default": "John",
      "required": true
    },
    "lastName": {
      "type": "string",
      "description": "User last name",
      "minLength": 4,
      "default": "Doe",
      "required": true
    },
    "level": {
      "type": "number",
      "description": "User level",
      "minimum": 0,
      "default": "Doe",
      "required": true
    },
    "tags": {
      "title": "List of user tags",
      "type": "array",
      "uniqueItems": true,
      "required": false,
      "items": {
        "minLength": 2,
        "maxLength": 32,
        "type": "string"
      }
    },
    "avatar": {
      "type": "string",
      "format": "uri",
      "description": "User avatar",
      "default": "http://placehold.it/120x120"
    },
    "badges": {
      "type": "object",
      "description": "User badges catalog",
      "required": true,
      "title": "Badges",
      "properties": {}
    },
    "flights": {
      "type": "object",
      "description": "Flights informations",
      "required": true,
      "title": "Flights",
      "properties": {
        "numberOf": {
          "minimum": 0,
          "type": "number",
          "description": "Number of flights",
          "required": true
        },
        "distance": {
          "type": "number",
          "minimum": 0,
          "description": "Distance in kilometeres",
          "required": true
        }
      }
    },
    "points": {
      "type": "number",
      "minimum": 0,
      "description": "User points",
      "required": true
    },
    "notifications": {
      "type": "array",
      "format": "table",
      "title": "Notifications",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "title": "Notification",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "badgeErn",
              "lvlUp",
              "lbUp"
            ],
            "description": "Type of notification",
            "default": "badgeErn",
            "required": true
          },
          "isRead": {
            "type": "boolean",
            "default": false,
            "title": "isRead"
          },
          "pictures": {
            "type": "object",
            "title": "Pictures",
            "properties": {
              "50x50": {
                "description": "Small image",
                "type": "string",
                "default": "http://placehold.it/50x50",
                "required": true
              },
              "75x75": {
                "description": "Normal image",
                "type": "string",
                "default": "http://placehold.it/75x75",
                "required": true
              }
            }
          },
          "title": {
            "type": "object",
            "title": "Title of notification",
            "required": true,
            "uniqueItems": true,
            "properties": {
              "key": {
                "type": "string",
                "description": "Key of translation",
                "required": true
              },
              "variables": {
                "type": "object",
                "title": "List of variables",
                "required": false,
                "uniqueItems": true,
                "properties": {
                  "*": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "description": {
            "type": "object",
            "title": "Notification description",
            "required": true,
            "uniqueItems": true,
            "properties": {
              "key": {
                "type": "string",
                "description": "Key of the translation",
                "required": true
              },
              "variables": {
                "type": "object",
                "title": "List of variables",
                "required": false,
                "uniqueItems": true,
                "properties": {
                  "*": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "createAt": {
            "format": "date-time",
            "type": "string",
            "description": "Notification creation time",
            "required": true,
            "default": "2012-04-23T18:25:43.511Z"
          },
          "social": {
            "type": "object",
            "description": "Social media integration integration",
            "title": "Social",
            "properties": {
              "facebook": {
                "required": true,
                "type": "object",
                "description": " For more information see https://developers.facebook.com/docs/graph-api/reference/v2.1/user/feed",
                "title": "Facebook",
                "properties": {
                  "message": {
                    "type": "string",
                    "minLength": 4,
                    "maxLength": 256,
                    "required": true,
                    "description": "The main body of the post, otherwise called the status message"
                  },
                  "link": {
                    "required": true,
                    "type": "object",
                    "title": "Link",
                    "description": "The URL of a link to attach to the post. Either link, place, or message must be supplied. Additional fields associated with link are shown below.",
                    "properties": {
                      "picture": {
                        "type": "string",
                        "default": "http://placehold.it/100x100",
                        "description": "Overwrites the description in the link preview",
                        "required": true
                      },
                      "name": {
                        "type": "string",
                        "default": "name",
                        "description": "Overwrites the title of the link preview.",
                        "required": true
                      },
                      "caption": {
                        "type": "string",
                        "default": "caption",
                        "description": "Overwrites the caption under the title in the link preview.",
                        "required": true
                      },
                      "description": {
                        "type": "string",
                        "default": "description",
                        "description": "Overwrites the description in the link preview",
                        "required": true
                      }
                    }
                  }
                }
              },
              "twitter": {
                "type": "object",
                "title": "Twitter",
                "description": " For more information see https://dev.twitter.com/rest/reference/post/statuses/update",
                "properties": {
                  "status": {
                    "type": "string",
                    "minLength": 4,
                    "maxLength": 140,
                    "required": true,
                    "description": "The text of your status update, typically up to 140 characters. URL encode as necessary. t.co link wrapping may affect character counts."
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}